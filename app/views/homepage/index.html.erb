<div class = 'text-center'>
  <h1>Welcome to Acebook</h1>

<% if @current_user %>
<%=  @current_user.name %>
<% end %>
<% if logged_in? %>
<%= link_to "New Post", new_user_post_url(@current_user) %>
<%= link_to "Log Out", logout_path, method: :delete %>
<% else %>
<%= link_to "Sign Up", signup_path %>
<%= link_to "Log In", login_path %>
<% end %>
</div>
